<Application x:Class="Ticketing_Harry_Poter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <!-- Police HarryP (fichier HARRYP_.ttf) -->
        <FontFamily x:Key="HarryPFont">
            pack://application:,,,/Ticketing_Harry_Poter;component/Resources/Fonts/HARRYP_.ttf#HarryP
        </FontFamily>

        <!-- Cinzel Regular -->
        <FontFamily x:Key="CinzelRegular">
            pack://application:,,,/Ticketing_Harry_Poter;component/Resources/Fonts/Cinzel-Regular.ttf#Cinzel
        </FontFamily>

        <!-- Cinzel Decorative (pour les titres) -->
        <FontFamily x:Key="CinzelDecorative">
            pack://application:,,,/Ticketing_Harry_Poter;component/Resources/Fonts/CinzelDecorative-Regular.ttf#Cinzel Decorative
        </FontFamily>

        <!-- Vous pouvez ajouter d’autres variantes si besoin -->
    </Application.Resources>
</Application>

