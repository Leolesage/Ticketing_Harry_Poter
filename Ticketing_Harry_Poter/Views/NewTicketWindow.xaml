<Window x:Class="Ticketing_Harry_Poter.Views.NewTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un Ticket"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label Content="Titre :" Grid.Row="0"/>
		<TextBox x:Name="TitleBox"
				 Grid.Row="0"
				 Margin="80,0,0,0"
				 Width="450"/>

		<Label Content="Catégorie :" Grid.Row="1" Margin="0,10,0,0"/>
		<ComboBox x:Name="CategoryBox"
				  Grid.Row="1"
				  Margin="80,10,0,0"
				  Width="200"/>

		<Label Content="Priorité :" Grid.Row="2" Margin="0,10,0,0"/>
		<ComboBox x:Name="PriorityBox"
				  Grid.Row="2"
				  Margin="80,10,0,0"
				  Width="200"/>

		<Label Content="Description :" Grid.Row="3" Margin="0,10,0,0"/>
		<TextBox x:Name="DescBox"
				 Grid.Row="3"
				 Margin="0,30,0,0"
				 AcceptsReturn="True"
				 TextWrapping="Wrap"
				 VerticalScrollBarVisibility="Auto"/>

		<Button Content="Envoyer"
				Grid.Row="4"
				Width="100"
				HorizontalAlignment="Right"
				Margin="0,20,0,0"
				Click="Send_Click"/>
	</Grid>
</Window>
