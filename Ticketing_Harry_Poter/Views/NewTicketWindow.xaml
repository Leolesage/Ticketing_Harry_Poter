<Window x:Class="Ticketing_Harry_Poter.Views.NewTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouveau Ticket"
        Width="600" Height="650"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style pour boutons arrondis -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource HarryPFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 1) Le parchemin qui déborde un peu -->
        <Image Source="/Ticketing_Harry_Poter;component/Resources/parchment.png"
           Stretch="UniformToFill"
           Margin="-20"/>

        <!-- 2) Contenu centré, transparent derrière -->
        <Grid Margin="40" Background="Transparent">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="INVOQUE TON TICKET D’ASSISTANCE"
                     FontFamily="{StaticResource HarryPFont}"
                     FontSize="22"
                     Foreground="#7F0909"
                     TextAlignment="Center"
                     Margin="0,0,0,16"/>

                    <TextBlock Text="TITRE" FontFamily="{StaticResource CinzelRegular}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TitleBox" FontSize="13" Height="28" Margin="0,0,0,12"/>

                    <TextBlock Text="CATÉGORIE" FontFamily="{StaticResource CinzelRegular}" FontSize="11" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CategoryBox" FontSize="13" Height="28" Margin="0,0,0,12"/>

                    <TextBlock Text="PRIORITÉ" FontFamily="{StaticResource CinzelRegular}" FontSize="11" Margin="0,0,0,4"/>
                    <ComboBox x:Name="PriorityBox" FontSize="13" Height="28" Margin="0,0,0,12"/>

                    <TextBlock Text="DESCRIPTION" FontFamily="{StaticResource CinzelRegular}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="DescBox"
                   FontSize="13"
                   Height="100"
                   TextWrapping="Wrap"
                   AcceptsReturn="True"
                   Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource RoundedButtonStyle}"
                    x:Name="BtnSend"
                    Content="ENVOYER"
                    Background="#7F0909"
                    Width="120"
                    Margin="0,0,8,0"
                    Click="Send_Click"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                    x:Name="BtnCancel"
                    Content="FERMER"
                    Background="#2A623D"
                    Width="120"
                    Click="Cancel_Click"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
