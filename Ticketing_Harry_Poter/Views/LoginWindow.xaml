<Window x:Class="Ticketing_Harry_Poter.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accio Ticket — Connexion"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <!-- Styles et ressources -->
    <Window.Resources>
        <!-- Style boutons arrondis -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource HarryPFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="20"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fond plein écran -->
        <Image Source="/Ticketing_Harry_Poter;component/Resources/door.jpg"
           Stretch="UniformToFill"/>

        <!-- Bouton Fermer -->
        <Button x:Name="BtnClose"
            Content="✖"
            FontSize="16"
            Foreground="White"
            Background="Transparent"
            BorderThickness="0"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Click="BtnClose_Click"/>

        <!-- Contenu centré -->
        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="350">

            <!-- Titre -->
            <TextBlock Text="BIENVENUE"
                 FontFamily="{StaticResource HarryPFont}"
                 FontSize="36"
                 Foreground="Black"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,10"/>

            <!-- Sous-titre -->
            <TextBlock Text="Choisissez votre rôle"
                 FontFamily="{StaticResource CinzelRegular}"
                 FontSize="16"
                 Foreground="Black"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,20"/>

            <!-- Prénom -->
            <TextBlock Text="Prénom :"
                 FontFamily="{StaticResource CinzelRegular}"
                 FontSize="14"
                 Foreground="Black"
                 Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNameBox"
               FontFamily="{StaticResource CinzelRegular}"
               FontSize="14"
               Height="30"
               Margin="0,0,0,10"/>

            <!-- Erreur -->
            <TextBlock x:Name="ErrorText"
                 FontFamily="{StaticResource CinzelRegular}"
                 FontSize="12"
                 Foreground="Crimson"
                 Visibility="Collapsed"
                 TextWrapping="Wrap"
                 Margin="0,0,0,10"/>

            <!-- Boutons arrondis -->
            <Button Style="{StaticResource RoundedButtonStyle}"
              Content="ÉLÈVE"
              Click="User_Click"
              Background="#000000"
              Margin="0,0,0,8"/>

            <Button Style="{StaticResource RoundedButtonStyle}"
              Content="ELFE DE MAISON"
              Click="Admin_Click1"
              Background="#7F0909"
              Margin="0,0,0,8"/>

            <Button Style="{StaticResource RoundedButtonStyle}"
              Content="PRÉFET"
              Click="Admin_Click2"
              Background="#D3A625"
              Margin="0,0,0,8"/>

            <Button Style="{StaticResource RoundedButtonStyle}"
              Content="PROFESSEUR"
              Click="Admin_Click3"
              Background="#2A623D"/>

        </StackPanel>
    </Grid>
</Window>
