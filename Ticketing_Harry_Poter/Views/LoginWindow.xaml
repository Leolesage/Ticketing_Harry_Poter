<Window x:Class="Ticketing_Harry_Poter.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion"
        Width="700" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Bienvenue, choisissez votre profil"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Grid.Row="0"
               Margin="0,0,0,25"/>

        <!-- Prénom pour utilisateur -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Prénom :" FontSize="16" VerticalAlignment="Center"/>
            <TextBox x:Name="FirstNameBox"
               Width="250"
               Height="30"
               FontSize="16"
               Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Boutons Administrateur 1/2/3 + Utilisateur -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,30,0,0">
            <Button Content="Admin Niveau 1"
              Width="130" Height="40"
              FontSize="14"
              Margin="0,0,10,0"
              Click="Admin_Click1"/>
            <Button Content="Admin Niveau 2"
              Width="130" Height="40"
              FontSize="14"
              Margin="0,0,10,0"
              Click="Admin_Click2"/>
            <Button Content="Admin Niveau 3"
              Width="130" Height="40"
              FontSize="14"
              Margin="0,0,20,0"
              Click="Admin_Click3"/>
            <Button Content="Utilisateur"
              Width="130" Height="40"
              FontSize="14"
              Click="User_Login_Click"/>
        </StackPanel>

        <!-- Zone d'erreur -->
        <TextBlock x:Name="ErrorText"
               Grid.Row="3"
               Foreground="Red"
               FontSize="14"
               HorizontalAlignment="Center"
               Visibility="Collapsed"
               Margin="0,20,0,0"/>
    </Grid>
</Window>
